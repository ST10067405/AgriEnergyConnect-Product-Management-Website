@model AgriEnergyConnect.Models.Product

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="container mt-4">
    <h1 class="mb-4">Create Product</h1>

    <div class="row justify-content-center">
        <form asp-action="Create" method="post" class="form-horizontal">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductionDate" class="control-label"></label>
                    <input asp-for="ProductionDate" class="form-control" type="date" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>
                <div class="form-group visually-hidden">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" value="@ViewBag.UserId" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</main>


