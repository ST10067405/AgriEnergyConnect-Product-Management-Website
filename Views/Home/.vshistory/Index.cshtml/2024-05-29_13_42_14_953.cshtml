@{
    ViewData["Title"] = "Home";
}
<style>
    /* Hero Section */
    .hero {
        background: url('~/images/hero-bg.jpg') no-repeat center center/cover;
        color: white;
        padding: 100px 0;
        text-align: center;
    }

        .hero h1 {
            font-size: 48px;
            font-weight: bold;
        }

        .hero p {
            font-size: 18px;
            margin: 20px 0;
        }

        .hero .btn {
            padding: 10px 20px;
            margin: 10px;
            border-radius: 5px;
        }

    /* About Us Section */
    .about-us {
        text-align: center;
    }

        .about-us img {
            margin-top: 20px;
            max-width: 100%;
            height: auto;
        }

    /* Services Section */
    .services {
        text-align: center;
    }

        .services .card {
            margin: 10px 0;
        }

        .services .card-header {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
        }

    /* Latest News Section */
    .latest-news .blog-post {
        border-bottom: 1px solid #ddd;
        padding: 20px 0;
    }

        .latest-news .blog-post h3 {
            font-weight: bold;
        }

    /* Testimonials Section */
    .testimonials {
        text-align: center;
    }

    .carousel-item p {
        font-size: 16px;
        padding: 20px;
    }

    /* Footer */
    footer {
        background-color: #343a40;
        color: white;
        text-align: center;
        padding: 1rem 0;
    }

</style>
<section class="hero">
    <div class="container text-center">
        <h1>Bridging Agriculture and Green Energy Solutions</h1>
        <p>In response to the growing need for sustainable agricultural practices and the integration of green energy solutions in South Africa, Agri-Energy Connect bridges the gap between the agricultural sector and green energy technology providers.</p>
        <a href="/About" class="btn btn-primary">Learn More</a>
        <a href="/GetStarted" class="btn btn-secondary">Get Started</a>
    </div>
</section>

<main>
    <section class="about-us py-5">
        <div class="container">
            <h2>About Agri Energy Connect</h2>
            <p>A few paragraphs explaining the initiative's goals, vision, and mission.</p>
            <img src="~/images/about-us.jpg" alt="About Us" class="img-fluid" />
        </div>
    </section>

    <section class="services py-5 bg-light">
        <div class="container">
            <h2>Our Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <h3 class="card-header">Sustainable Agricultural Practices</h3>
                        <div class="card-body">
                            <p>Details about this service.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <h3 class="card-header">Green Energy Solutions</h3>
                        <div class="card-body">
                            <p>Details about this service.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <h3 class="card-header">Technology Integration and Support</h3>
                        <div class="card-body">
                            <p>Details about this service.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="latest-news py-5">
        <div class="container">
            <h2>Latest News and Updates</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="blog-post">
                        <h3>Blog Post Title</h3>
                        <p>Snippet of the blog post...</p>
                    </div>
                </div>
                <!-- Add more blog posts here -->
            </div>
        </div>
    </section>

    <section class="testimonials py-5 bg-light">
        <div class="container">
            <h2>What Our Partners Say</h2>
            <div id="testimonialsCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <p>Testimonial 1 content...</p>
                    </div>
                    <div class="carousel-item">
                        <p>Testimonial 2 content...</p>
                    </div>
                    <!-- Add more testimonials here -->
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>
</main>
