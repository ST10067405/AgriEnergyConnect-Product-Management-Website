@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Agri Energy Connect</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .jumbotron {
            background-color: #28a745;
            color: #fff;
            padding: 100px 20px;
            text-align: center;
        }
        .btn-get-started {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 18px;
            border-radius: 5px;
            cursor: pointer;
        }
        .btn-get-started:hover {
            background-color: #0056b3;
        }
        .section-content {
            padding: 50px 0;
            text-align: center;
        }
        .section-content h2 {
            font-size: 36px;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">Agri Energy Connect</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="jumbotron">
            <h1 class="display-4">Welcome to Agri Energy Connect</h1>
            <p class="lead">Connecting Agriculture with Green Energy Solutions</p>
            @if (User.Identity.IsAuthenticated && !(User.IsInRole("Farmer") || User.IsInRole("Employee") || User.IsInRole("Administrator")))
            {
                <a href="Home/ThanksForSigningUp" class="btn btn-get-started">Waiting for Application Approval</a>
            }
            else if (User.IsInRole("Farmer") || User.IsInRole("Employee") || User.IsInRole("Administrator"))
            {
                <a href="/Products" class="btn btn-get-started">Welcome! Let's Get Started</a>
            }
            else
            {
                <a href="/Identity/Account/Login" class="btn btn-get-started">Get Started</a>
            }
        </div>
        <section class="section-content">
            <div class="container">
                <h2>About Us</h2>
                <p>
                    In response to the growing need for sustainable agricultural practices and the integration of green
                    energy solutions in South Africa, a visionary initiative named “Agri-Energy Connect” has been
                    conceptualized. This initiative seeks to develop an innovative web platform that bridges the gap
                    between the agricultural sector and green energy technology providers.
                </p>
            </div>
        </section>
        <section class="section-content bg-light">
            <div class="container">
                <h2>Our Services</h2>
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ac quam tincidunt, tristique lorem
                    eget, volutpat libero. Nam vel risus fermentum, luctus neque sed, vestibulum odio.
                </p>
                <p>
                    Nulla facilisi. Vestibulum nec enim nec augue bibendum viverra ac sit amet orci. Integer nec
                    purus id mauris tempus mattis. Integer vel orci consectetur, dictum risus vel, tempus eros.
                </p>
            </div>
        </section>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

